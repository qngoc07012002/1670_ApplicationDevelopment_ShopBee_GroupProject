@inject IHttpContextAccessor Accessor﻿;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Admin Management</title>
    <!----css3---->
    <!-- SLIDER REVOLUTION 4.x CSS SETTINGS -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" rel="stylesheet" />
    <!--google material icon-->
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

    <!-- bootstrap css -->
    <link rel="stylesheet" href="~/css/store/bootstrap.min.css" />
    <!-- theme min css-->
    <!-- <link rel="stylesheet" href="~/css/theme.min.css?v=1.0"> -->
    <!-- site css -->
    <link rel="stylesheet" href="~/css/store/style.css" />
    <!-- responsive css -->
    <link rel="stylesheet" href="~/css/store/responsive.css" />
    <!-- color css -->
    <!--<link rel="stylesheet" href="~/css/admin/colors.css" />-->
    <!-- select bootstrap -->
    <link rel="stylesheet" href="~/css/store/bootstrap-select.css" />
    <!-- scrollbar css -->
    <link rel="stylesheet" href="~/css/store/perfect-scrollbar.css" />
    <!-- custom css -->
    <link rel="stylesheet" href="~/css/store/custom.css" />
    <!--icon css-->
    <link rel="stylesheet" href="~/css/store/icon-set/style.css">



    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>
<body class="dashboard dashboard_1">
    <div class="full_container">
        <div class="inner_container">
            <!-- Sidebar  -->
            <nav id="sidebar">
                <div class="sidebar_blog_1">
                    <div class="sidebar-header">
                        <div class="logo_section">
                            <a asp-area="Customer" asp-controller="Home" asp-action="Index"><img class="logo_icon img-responsive" src="~/img/admin/logo.png" alt="#" /></a>
                        </div>
                    </div>
                    <div class="sidebar_user_info">

                        <div class="user_profle_side">
                            <div class="user_img">

                                @{

                                    var userAvt = Accessor.HttpContext.Session.GetString("UserAvt");
                                    <img src="@userAvt" class="img-responsive">
                                }

                            </div>
                            <div class="user_info">
                                @{
                                    var userName = Accessor.HttpContext.Session.GetString("UserName");
                                    <span class="header__navbar-user-name">@userName</span>
                                }
                                <p><span class="online_animation"></span> Online</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="sidebar_blog_2">
                    <a asp-area="Store" asp-controller="Home" asp-action="Index"><h4>General</h4></a>

                    <ul class="list-unstyled components">

                        <li class="active">
                        <li>
                            <a asp-area="Store" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-gauge fa-flip" style="color: #f28202;"></i> <span>Dashboard</span></a>

                        </li>
                        <li>
                            <a asp-area="Store" asp-controller="Book" asp-action="Index">
                                <i class="fa-solid fa-book fa-bounce" style="color: #c2243b;"></i><span>Book</span>
                            </a>
                        </li>
                        <li>
                            <a asp-area="Store" asp-controller="Order" asp-action="Index">
                                <i class="fa-solid fa-cart-shopping fa-beat" style="color: #0561ff;"></i><span>Order</span>
                            </a>
                        </li>
                        <li>
                            <a asp-area="Store" asp-controller="Feedback" asp-action="Index">
                                <i class="fa-regular fa-user fa-flip" style="color: #02f7cf;"></i><span>Feedback</span>
                            </a>
                        </li>
                        <li>
                            <a asp-area="Store" asp-controller="Category" asp-action="Index">
                                <i class="fa-regular fa-user fa-flip" style="color: #02f7cf;"></i><span>Add Category</span>
                            </a>
                        </li>
                        <li>
                            <a asp-area="Customer" asp-controller="User" asp-action="Logout">
                                <i class="fa-solid fa-right-from-bracket fa-fade" style="color: #0ed840;"></i><span>Logout</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <!-- end sidebar -->
            <!-- right content -->
            <div id="content">
                <!-- topbar -->
                <div class="topbar">
                    <nav class="navbar navbar-expand-lg navbar-light">
                        <div class="full">
                            <button type="button" id="sidebarCollapse" class="sidebar_toggle"><i class="fa fa-bars"></i></button>
                            <div class="right_topbar">
                                <div class="icon_info">
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
                <!-- end topbar -->
                <div class="container">
                    <main role="main" class="pb-3">
                        <partial name="_Notification" />
                        @RenderBody()
                    </main>
                </div>
                <!-- footer -->
                <div class="container-fluid">
                    <div class="footer">
                        <div class="text-center">
                            &copy; 2023 - Shopbee - Made by <a href="https://fb.com/">Group 2 <i class="bi bi-emoji-sunglasses"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end dashboard inner -->
        </div>
    </div>

    <!-- nice scrollbar -->
    <script src="https://cdn.tiny.cloud/1/ypwamkar0k7empicnohfcfoeo34m3w4w7x05sxstrqa1jqdr/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap.min.js"></script>


    <script>
        var ps = new PerfectScrollbar('#sidebar');
    </script>
    <!-- custom js -->
    @await RenderSectionAsync("Scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });

            $('.more-button,.body-overlay').on('click', function () {
                $('#sidebar,.body-overlay').toggleClass('show-nav');
            });

        });
    </script>
</body>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
</html>