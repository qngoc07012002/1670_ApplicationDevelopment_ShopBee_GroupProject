<!-- Content -->
@model OrderVM
<div class="content container-fluid">
    <!-- Page Header -->
    <div class="page-header d-print-none">
        <div class="row align-items-center">
            <div class="col-sm mb-2 mb-sm-0">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-no-gutter">
                        <li class="breadcrumb-item"><a class="breadcrumb-link" asp-area="Store" asp-action="Order">Orders</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Order details</li>
                    </ol>
                </nav>
                <div class="d-sm-flex align-items-sm-center">
                    <h1 class="page-header-title text-success">Order - #@Model.Order.Id</h1>
                    <span class="badge-soft-success ml-sm-3">
                        <span class="text-bg-success "></span>@Model.Order.Status</span>
                    <span class="ml-2 ml-sm-3">
                        <i class="tio-date-range"></i> @Model.Order.CreateDate
                    </span>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page Header -->

    <div class="row">
        <div class="col-lg-8 mb-3 mb-lg-0">
            <!-- Card -->
            <div class="card mb-3 mb-lg-5">
                <!-- Header -->
                <div class="card-header">
                    <h3 class="card-header-title">Total Orders  <span class="rounded-circle ml-1">@Model.DetailsOfOderList.Count</span></h3>
                </div>
                <!-- End Header -->
                <!-- Body -->
                <div class="card-body">
                    <div class="media">
                        <div class="avatar avatar-xl mr-3">
                            <h4>Image</h4>
                        </div>
                        <div class="media-body">
                            <div class="row">
                                <div class="col-md-6 mb-3 mb-md-0">
                                    <a class="h5 d-block">Book Name</a>
                                </div>
                                <div class="col col-md-2 align-self-center">
                                    <h6>Price</h6>
                                </div>
                                <div class="col col-md-2 align-self-center">
                                    <h6>Quantity</h6>
                                </div>
                                <div class="col col-md-2 align-self-center text-right">
                                    <h6>Total</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    @foreach (var orderDetail in Model.DetailsOfOderList)
                    {
                        <div class="media">
                            <div class="avatar avatar-xl mr-3">
                                <img class="img-fluid" src="@orderDetail.Book.ImgUrl" alt="Image Description">
                            </div>
                            <div class="media-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3 mb-md-0">
                                        <a class="h5 d-block" href="#">@orderDetail.Book.Name</a>
                                    </div>
                                    <div class="col col-md-2 align-self-center">
                                        <h5>@orderDetail.Book.DiscountPrice$</h5>
                                    </div>
                                    <div class="col col-md-2 align-self-center">
                                        <h5>@orderDetail.Quantity </h5>
                                    </div>
                                    <div class="col col-md-2 align-self-center text-right">
                                        <h5>@orderDetail.TotalPrice$</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                    }
                    <hr>
                    <div class="row justify-content-md-end mb-3">
                        <div class="col-md-8 col-lg-7">
                            <dl class="row text-sm-right">
                                <dt class="col-sm-6">Shipping fee:</dt>
                                <dd class="col-sm-6">0.00$</dd>
                                <dt class="col-sm-6">Total:</dt>
                                <dd class="col-sm-6">@Model.Order.TotalPrice$</dd>
                                <dt class="col-sm-6">Amount paid:</dt>
                                <dd class="col-sm-6">@Model.Order.TotalPrice$</dd>
                            </dl>
                            <!-- End Row -->
                        </div>
                    </div>
                    <!-- End Row -->
                </div>
                <!-- End Body -->
            </div>
            <!-- End Card -->
            <!-- Card -->
            <div class="card">
                <!-- Header -->
                <div class="card-header">
                    <h4 class="card-header-title">
                        Shipping activity
                    </h4>
                </div>
                <!-- End Header -->
                <!-- Body -->
                <div class="card-body">
                    <!-- Step -->
                    <ul class="step step-icon-xs">
                        <!-- Step Item -->
                        <li class="step-item">
                            <div class="step-content-wrapper">
                                <small class="step-divider">Wednesday, 19 August</small>
                            </div>
                        </li>
                        <!-- End Step Item -->
                        <!-- Step Item -->
                        <li class="step-item">
                            <div class="step-content-wrapper">
                                <span class="step-icon step-icon-soft-dark step-icon-pseudo"></span>

                                <div class="step-content">
                                    <h5 class="mb-1">
                                        <a class="text-dark" href="#">Delivered</a>
                                    </h5>

                                    <p class="font-size-sm mb-0">4:17 AM</p>
                                </div>
                            </div>
                        </li>
                        <!-- End Step Item -->
                        <!-- Step Item -->
                        <li class="step-item">
                            <div class="step-content-wrapper">
                                <span class="step-icon step-icon-soft-dark step-icon-pseudo"></span>

                                <div class="step-content">
                                    <h5 class="mb-1">
                                        <a class="text-dark" href="#">Out for delivery</a>
                                    </h5>

                                    <p class="font-size-sm mb-0">2:38 AM</p>
                                </div>
                            </div>
                        </li>
                        <!-- End Step Item -->
                        <!-- Step Item -->
                        <li class="step-item">
                            <div class="step-content-wrapper">
                                <span class="step-icon step-icon-soft-dark step-icon-pseudo"></span>

                                <div class="step-content">
                                    <h5 class="mb-1">
                                        <a class="text-dark" href="#">Package arrived at the final delivery station</a>
                                    </h5>

                                    <p class="font-size-sm mb-0">2:00 AM</p>
                                </div>
                            </div>
                        </li>
                        <!-- End Step Item -->
                        <!-- Step Item -->
                        <li class="step-item">
                            <div class="step-content-wrapper">
                                <small class="step-divider">Tuesday, 18 August</small>
                            </div>
                        </li>
                        <!-- End Step Item -->
                        <!-- Step Item -->
                        <li class="step-item">
                            <div class="step-content-wrapper">
                                <span class="step-icon step-icon-soft-dark step-icon-pseudo"></span>

                                <div class="step-content">
                                    <h5 class="mb-1">
                                        <a class="text-dark" href="#">Tracking number</a>
                                    </h5>

                                    <a class="link" href="#">3981241023109293</a>
                                    <p class="font-size-sm mb-0">6:29 AM</p>
                                </div>
                            </div>
                        </li>
                        <!-- End Step Item -->
                        <!-- Step Item -->
                        <li class="step-item">
                            <div class="step-content-wrapper">
                                <span class="step-icon step-icon-soft-dark step-icon-pseudo"></span>

                                <div class="step-content">
                                    <h5 class="mb-1">
                                        <a class="text-dark" href="#">Package has dispatched</a>
                                    </h5>

                                    <p class="font-size-sm mb-0">6:29 AM</p>
                                </div>
                            </div>
                        </li>
                        <!-- End Step Item -->
                        <!-- Step Item -->
                        <li class="step-item">
                            <div class="step-content-wrapper">
                                <span class="step-icon step-icon-soft-dark step-icon-pseudo"></span>

                                <div class="step-content">
                                    <h5 class="mb-1">
                                        <a class="text-dark" href="#">Order was placed</a>
                                    </h5>

                                    <p class="font-size-sm mb-0">Order #@Model.Order.Id</p>
                                </div>
                            </div>
                        </li>
                        <!-- End Step Item -->
                    </ul>
                    <!-- End Step -->

                    <small>Times are shown in the local time zone.</small>
                </div>
                <!-- End Body -->
            </div>
            <!-- End Card -->
        </div>

        <div class="col-lg-4">
            <!-- Card -->
            <div class="card">
                <!-- Header -->
                <div class="card-header">
                    <h4 class="card-header-title">Customer</h4>
                </div>
                <!-- End Header -->
                <!-- Body -->
                <div class="card-body">
                    <a class="media align-items-center" href="#">
                        <div class="avatar avatar-circle mr-3">
                            <img class="avatar-img" src="@Model.Order.User.avtURL" alt="Image">
                        </div>
                        <div class="media-body">
                            <span class="text-body text-hover-primary">@Model.Order.User.Name</span>
                        </div>
                        <div class="media-body text-right">
                            <i class="tio-chevron-right text-body"></i>
                        </div>
                    </a>
                    <hr>
                    <div class="d-flex justify-content-between align-items-center">
                        <h5>Contact info</h5>
                        
                    </div>

                    <ul class="list-unstyled list-unstyled-py-2">
                        <li>
                            <i class="tio-online mr-2"></i>
                            @Model.Order.User.Email
                        </li>
                        <li>
                            <i class="tio-android-phone-vs mr-2"></i>
                            @Model.Order.User.Phone
                        </li>
                    </ul>
                    <hr>
                    <div class="d-flex justify-content-between align-items-center">
                        <h5>Shipping address</h5>
                    </div>
                    <span class="d-block">
                        @Model.Order.User.Adress
                    </span>
                    <hr>

                    <div class="d-flex justify-content-between align-items-center">
                        <h5>Billing address</h5>
                    </div>

                    <span class="d-block">
                        @Model.Order.User.Adress
                    </span>

                    <div class="mt-3">
                        <h5 class="mb-0">Payment Method</h5>
                        <span class="d-block">@Model.Order.Method</span>
                    </div>
                </div>
                <!-- End Body -->
            </div>
            <!-- End Card -->
        </div>
    </div>
    <!-- End Row -->
</div>
<!-- End Content -->